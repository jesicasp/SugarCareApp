<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="8dp"
    android:elevation="20dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWeek"
                style="@style/Theme.SugarCare.Poppins_16_bold_onSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginStart="15dp"
                android:text="@string/dummy_minggu" />

            <TextView
                android:id="@+id/tvMonthYear"
                style="@style/Theme.SugarCare.Poppins_16_bold_onSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginStart="15dp"
                android:text="@string/dummy_bulan_tahun" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/weekly_report"
            android:src="@drawable/icon_week_rep"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>

