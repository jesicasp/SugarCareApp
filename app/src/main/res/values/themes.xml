<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.SugarCare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SugarCare" parent="Base.Theme.SugarCare" />

    <style name="Button_Primary_12_regular" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/theme_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button_Secondary_12_regular">
        <item name="android:background">@drawable/button_secondary_stroke</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/theme_secondary</item>
    </style>

    <style name="Theme.SugarCare.Poppins_12_regular" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SugarCare.Poppins_12_bold_onPrimary" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SugarCare.Poppins_16_bold_onSecondary" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/theme_secondary</item>
    </style>

    <style name="Theme.SugarCare.Poppins_12_bold_black" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.SugarCare.Poppins_12_normal_black" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.SugarCare.Poppins_11_regular" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="EditTextCustom_allradius_12" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/theme_secondary</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
    </style>

    <style name="Base.Theme.SugarCare.SugarGrade.Yellow">
        <item name="android:background">@drawable/yellowgrade</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/yellowgrade</item>
    </style>

    <style name="Base.Theme.SugarCare.SugarGrade.Red">
        <item name="android:background">@drawable/redgrade</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/redgrade</item>
    </style>

    <style name="Base.Theme.SugarCare.SugarGrade.Green">
        <item name="android:background">@drawable/greengrade</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/greengrade</item>
    </style>
    

</resources>
