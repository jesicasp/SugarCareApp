<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.SugarCare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aqua_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/teal_green</item>
    </style>

    <style name="Theme.SugarCare" parent="Base.Theme.SugarCare" />

    <style name="Button_Primary_12_regular" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/aqua_green</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button_Secondary_12_regular">
        <item name="android:background">@drawable/button_secondary_stroke</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/teal_green</item>
    </style>

    <style name="Button_Menu_White_regular" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_menu_white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/teal_green</item>
    </style>

    <style name="Button_Menu_Teal_regular" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_menu_aqua_green</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SugarCare.Poppins_12_regular" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SugarCare.Poppins_12_bold_onPrimary" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SugarCare.Poppins_16_bold_onPrimary" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SugarCare.Poppins_16_bold_onSecondary" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/teal_green</item>
    </style>

    <style name="Theme.SugarCare.Poppins_12_bold_black" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.SugarCare.Poppins_14_bold_black" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.SugarCare.Poppins_12_normal_black" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.SugarCare.Poppins_11_regular" parent="Base.Theme.SugarCare">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="EditTextCustom_allradius_12" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/teal_green</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
    </style>

    <style name="Theme.SugarCare.YellowGrade">
        <item name="android:background">@drawable/yellowgrade</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/yellowgrade</item>
    </style>

    <style name="Theme.SugarCare.RedGrade">
        <item name="android:background">@drawable/redgrade</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/redgrade</item>
    </style>

    <style name="Theme.SugarCare.GreenGrade">
        <item name="android:background">@drawable/greengrade</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/greengrade</item>
    </style>

    <style name="RoundedImageBottom" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
    </style>

    <style name="ShapeAppearance.FAB" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>
